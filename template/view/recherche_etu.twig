{% extends "base.twig" %}
{% block stagiaire_active %}actif
{% endblock %}
{% block cacher %}display: none;
{% endblock %}
{% block content %}
	<h1>Rechercher un étudiant</h1>
	<form method="post">
		<div class="form-group">
			<label for="nom">Nom :</label>
			<input type="text" class="form-control" id="nom" name="nom">
		</div>
		<div class="form-group">
			<label for="prenom">Prénom :</label>
			<input type="text" class="form-control" id="prenom" name="prenom">
		</div>
		<div class="form-group">
			<label for="entreprise">Entreprise :</label>
			<select id="entreprise" name="entreprise">
				<option value="">-- select an option --</option>
				{% for entreprise in entreprises %}
					<option value="{{ entreprise.raison_sociale }}">{{ entreprise.raison_sociale }}</option>
				{% endfor %}
			</select>
		</div>
		<div class="form-group">
			<label for="professeur">Professeur :</label>
			<select id="professeur" name="professeur">
				<option value="">-- select an option --</option>
				{% for professeur in professeurs %}
					<option value="{{ professeur.nom_prof }}">{{ professeur.nom_prof }}
						{{ professeur.prenom_prof }}</option>
				{% endfor %}
			</select>
		</div>
		<input type="submit" value="Rechercher">
	{% endblock %}
