{% extends "base.twig" %}
{% block stagiaire_active %}bg-blue-600
{% endblock %}
{% block content %}
	<h1 class="text-2xl font-bold mb-4">Rechercher un étudiant</h1>
	<form method="post" class="space-y-4">
		<div class="form-group">
			<label for="nom" class="block text-gray-700 font-bold mb-2">Nom :</label>
			<input type="text" class="form-control w-full p-2 border border-gray-300 rounded" id="nom" name="nom">
		</div>
		<div class="form-group">
			<label for="prenom" class="block text-gray-700 font-bold mb-2">Prénom :</label>
			<input type="text" class="form-control w-full p-2 border border-gray-300 rounded" id="prenom" name="prenom">
		</div>
		<div class="form-group">
			<label for="entreprise" class="block text-gray-700 font-bold mb-2">Entreprise :</label>
			<select id="entreprise" name="entreprise" class="form-control w-full p-2 border border-gray-300 rounded">
				<option value="">-- select an option --</option>
				{% for entreprise in entreprises %}
					<option value="{{ entreprise.raison_sociale }}">{{ entreprise.raison_sociale }}</option>
				{% endfor %}
			</select>
		</div>
		<div class="form-group">
			<label for="professeur" class="block text-gray-700 font-bold mb-2">Professeur :</label>
			<select id="professeur" name="professeur" class="form-control w-full p-2 border border-gray-300 rounded">
				<option value="">-- select an option --</option>
				{% for professeur in professeurs %}
					<option value="{{ professeur.nom_prof }}">{{ professeur.nom_prof }}
						{{ professeur.prenom_prof }}</option>
				{% endfor %}
			</select>
		</div>
		<div class="text-center">
			<input type="submit" value="Rechercher" class="bg-blue-600 text-white py-2 px-4 rounded hover:bg-blue-700">
		</div>
	</form>
{% endblock %}
