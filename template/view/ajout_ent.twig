{% extends "base.twig" %}
{% block entreprise_active %}actif
{% endblock %}
{% block content %}

    <h1>Ajouter une entreprise</h1>
	<form>
		<table class="list">
			<th colspan="2">
				Information
			</th>
			<tr>
				<td>
					Nom de l'entreprise<span class="important">*</span>
				</td>
				<td>
					<label for="entreprises"></label>
					<textarea name="description" required></textarea>
				</td>
			</tr>
			<tr>
				<td>
					Nom du contact
				</td>
				<td>
					<label for="nom_contact"></label>
					<textarea name="description"></textarea>
				</td>
			</tr>
			<tr>
				<td>
					Nom du responsable
				</td>
				<td>
					<label for="nom_responsable"></label>
					<textarea name="description"></textarea>
				</td>
			</tr>
		</table>

		<table class="list">
			<th colspan="2">
				Contact
			</th>
			<tr>
				<td>Rue<span class="important">*</span>:</td>
				<td>
					<textarea name="rue" required></textarea>
				</td>
			</tr>
			<tr>
				<td>Code postal<span class="important">*</span>:</td>
				<td>
					<textarea name="code postal" required></textarea>
				</td>
			</tr>
			<tr>
				<td>Ville<span class="important">*</span>:</td>
				<td>
					<textarea name="ville" required></textarea>
				</td>
			</tr>
			<tr>
				<td>Téléphone<span class="important">*</span>:</td>
				<td>
					<textarea name="telephone" required></textarea>
				</td>
			</tr>
			<tr>
				<td>Fixe:</td>
				<td>
					<textarea name="fixe"></textarea>
				</td>
			</tr>
			<tr>
				<td>Mail<span class="important">*</span>:</td>
				<td>
					<textarea name="mail" required></textarea>
				</td>
			</tr>
		</table>

		<table class="list">
			<th colspan="2">
				Divers
			</th>
			<tr>
				<td>Observation:</td>
				<td>
					<textarea name="observation"></textarea>
				</td>
			</tr>
			<tr>
				<td>Site:</td>
				<td>
					<textarea name="site"></textarea>
				</td>
			</tr>
			<tr>
				<td>Niveau<span class="important">*</span>:</td>
				<td>
					<textarea name="niveau" required></textarea>
				</td>
			</tr>
			<tr>
				<td>Spécialité:</td>
				<td>
					<textarea name="specialite"></textarea>
				</td>
			</tr>
		</table>


		<p class="message">
			Les champs comportant le symbole
			<span class="important">*</span>
			sont obligatoires
		</p>
		<p>
			<input type="submit" value="S'inscrire">
		</p>
	</form>


{% endblock %}
