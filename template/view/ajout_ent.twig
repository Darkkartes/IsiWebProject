{% extends "base.twig" %}
{% block entreprise_active %}bg-blue-600
{% endblock %}
{% block content %}
	<h1 class="text-2xl font-bold mb-4">Ajouter une entreprise</h1>
	<form method="post">
		<div class="mb-6">
			<h2 class="text-xl font-semibold mb-2">Information</h2>
			<div class="mb-4">
				<label for="entreprise" class="block text-gray-700 font-bold mb-2">Nom de l'entreprise<span class="text-red-500">*</span>
				</label>
				<textarea name="entreprise" id="entreprise" required class="w-full p-2 border border-gray-300 rounded"></textarea>
			</div>
			<div class="mb-4">
				<label for="nom_contact" class="block text-gray-700 font-bold mb-2">Nom du contact</label>
				<textarea name="nom_contact" id="nom_contact" class="w-full p-2 border border-gray-300 rounded"></textarea>
			</div>
			<div class="mb-4">
				<label for="nom_responsable" class="block text-gray-700 font-bold mb-2">Nom du responsable</label>
				<textarea name="nom_responsable" id="nom_responsable" class="w-full p-2 border border-gray-300 rounded"></textarea>
			</div>
		</div>

		<div class="mb-6">
			<h2 class="text-xl font-semibold mb-2">Contact</h2>
			<div class="mb-4">
				<label for="rue" class="block text-gray-700 font-bold mb-2">Rue<span class="text-red-500">*</span>
				</label>
				<textarea name="rue" id="rue" required class="w-full p-2 border border-gray-300 rounded"></textarea>
			</div>
			<div class="mb-4">
				<label for="ville" class="block text-gray-700 font-bold mb-2">Ville<span class="text-red-500">*</span>
				</label>
				<textarea name="ville" id="ville" required class="w-full p-2 border border-gray-300 rounded"></textarea>
			</div>
			<div class="mb-4">
				<label for="code_postal" class="block text-gray-700 font-bold mb-2">Code postal<span class="text-red-500">*</span>
				</label>
				<textarea name="code_postal" id="code_postal" required class="w-full p-2 border border-gray-300 rounded"></textarea>
			</div>
			<div class="mb-4">
				<label for="telephone" class="block text-gray-700 font-bold mb-2">Téléphone<span class="text-red-500">*</span>
				</label>
				<textarea name="telephone" id="telephone" required class="w-full p-2 border border-gray-300 rounded"></textarea>
			</div>
			<div class="mb-4">
				<label for="mail" class="block text-gray-700 font-bold mb-2">Email<span class="text-red-500">*</span>
				</label>
				<textarea name="mail" id="mail" required class="w-full p-2 border border-gray-300 rounded"></textarea>
			</div>
		</div>

		<div class="mb-6">
			<h2 class="text-xl font-semibold mb-2">Spécialité</h2>
			<div class="mb-4">
				<label for="specialite" class="block text-gray-700 font-bold mb-2">Spécialité<span class="text-red-500">*</span>
				</label>
				<textarea name="specialite" id="specialite" required class="w-full p-2 border border-gray-300 rounded"></textarea>
			</div>
		</div>

		<div class="text-center">
			<input type="submit" value="Ajouter" class="bg-blue-600 text-white py-2 px-4 rounded hover:bg-blue-700">
		</div>
	</form>
{% endblock %}
