{% extends "base.twig" %}
{% block inscription_active %}bg-blue-600
{% endblock %}
{% block content %}
	<article>
		<h1 class="text-2xl font-bold mb-4">Inscription</h1>

		<form method="post" class="space-y-4">
			<table class="min-w-full bg-white border border-gray-300">
				<thead>
					<tr>
						<th colspan="2" class="bg-blue-600 text-white px-4 py-2">Contact</th>
					</tr>
				</thead>
				<tbody>
					<tr class="bg-gray-100 border-b border-gray-300">
						<td class="px-4 py-2 border border-gray-500">Entreprise<span class="text-red-500">*</span>
						</td>
						<td class="px-4 py-2 border border-gray-500">
							<label for="entreprises" class="sr-only">Entreprise</label>
							<select required id="entreprises" name="entreprises" class="w-full p-2 border border-gray-300 rounded">
								<option value="">-- select an option --</option>
								{% for entreprise in entreprises %}
									<option value="{{ entreprise.raison_sociale }}">{{ entreprise.raison_sociale }}</option>
								{% endfor %}
							</select>
						</td>
					</tr>
					<tr class="bg-gray-100 border-b border-gray-300">
						<td class="px-4 py-2 border border-gray-500">Stagiaire<span class="text-red-500">*</span>
						</td>
						<td class="px-4 py-2 border border-gray-500">
							<label for="stagiaires" class="sr-only">Stagiaire</label>
							<select required id="stagiaires" name="stagiaires" class="w-full p-2 border border-gray-300 rounded">
								<option value="">-- select an option --</option>
								{% for stag in stagiaires %}
									<option value="{{ stag.nom_etudiant }}">{{ stag.nom_etudiant }}
										{{ stag.prenom_etudiant }}</option>
								{% endfor %}
							</select>
						</td>
					</tr>
					<tr class="bg-gray-100 border-b border-gray-300">
						<td class="px-4 py-2 border border-gray-500">Professeur<span class="text-red-500">*</span>
						</td>
						<td class="px-4 py-2 border border-gray-500">
							<label for="professeurs" class="sr-only">Professeur</label>
							<select required id="professeurs" name="professeurs" class="w-full p-2 border border-gray-300 rounded">
								<option value="">-- select an option --</option>
								{% for prof in professeurs %}
									<option value="{{ prof.nom_prof }}">{{ prof.nom_prof }}
										{{ prof.prenom_prof }}</option>
								{% endfor %}
							</select>
						</td>
					</tr>
				</tbody>
			</table>

			<table class="min-w-full bg-white border border-gray-300">
				<thead>
					<tr>
						<th colspan="2" class="bg-blue-600 text-white px-4 py-2">Description du stage</th>
					</tr>
				</thead>
				<tbody>
					<tr class="bg-gray-100 border-b border-gray-300">
						<td class="px-4 py-2 border border-gray-500">Date de d√©but du stage<span class="text-red-500">*</span>
							:</td>
						<td class="px-4 py-2 border border-gray-500">
							<input type="date" name="date_debut" id="date_debut" required class="w-full p-2 border border-gray-300 rounded">
						</td>
					</tr>
					<tr class="bg-gray-100 border-b border-gray-300">
						<td class="px-4 py-2 border border-gray-500">Date de fin du stage<span class="text-red-500">*</span>
							:</td>
						<td class="px-4 py-2 border border-gray-500">
							<input type="date" name="date_fin" id="date_fin" required class="w-full p-2 border border-gray-300 rounded">
						</td>
					</tr>
					<tr class="bg-gray-100 border-b border-gray-300">
						<td class="px-4 py-2 border border-gray-500">Type de stage<span class="text-red-500">*</span>
							:</td>
						<td class="px-4 py-2 border border-gray-500">
							<label for="type" class="sr-only">Type de stage</label>
							<select id="type" name="type" class="w-full p-2 border border-gray-300 rounded">
								<option value="">-- select an option --</option>
								<option value="Aucun">Aucun</option>
								<option value="Stage">Stage</option>
								<option value="Alternance">Alternance</option>
							</select>
						</td>
					</tr>
					<tr class="bg-gray-100 border-b border-gray-300">
						<td class="px-4 py-2 border border-gray-500">Description du projet :</td>
						<td class="px-4 py-2 border border-gray-500">
							<textarea name="description" id="description" class="w-full p-2 border border-gray-300 rounded"></textarea>
						</td>
					</tr>
					<tr class="bg-gray-100 border-b border-gray-300">
						<td class="px-4 py-2 border border-gray-500">Observation :</td>
						<td class="px-4 py-2 border border-gray-500">
							<textarea name="observation" id="observation" class="w-full p-2 border border-gray-300 rounded"></textarea>
						</td>
					</tr>
				</tbody>
			</table>

			<p class="text-red-500 font-bold">
				Les champs comportant le symbole
				<span class="text-red-500">*</span>
				sont obligatoires
			</p>
			<div class="text-center">
				<input type="submit" value="Valider" class="bg-blue-600 text-white py-2 px-4 rounded hover:bg-blue-700">
			</div>
		</form>
	</article>
{% endblock %}
