{% extends "base.twig" %}
{% block connexion_active %}bg-blue-600
{% endblock %}
{% block content %}
	<div class="bg-gray-800 text-white rounded-lg p-8 mx-auto my-8 w-full max-w-md">
		<h1 class="text-center text-2xl mb-4">Gestion des stages</h1>
		<p class="text-center mb-4">Vous n'êtes pas connecté. Identifiez-vous pour poursuivre la navigation.</p>

		<form method="post" action="index.php">
			<div class="mb-4">
				<label for="login" class="block mb-2">Login :</label>
				<input type="text" class="form-control text-slate-950 w-full p-2 border border-gray-300 rounded" id="login" name="login" required>
			</div>
			<div class="mb-4">
				<label for="mdp" class="block mb-2">Mot de passe :</label>
				<input type="password" class="form-control text-slate-950 w-full p-2 border border-gray-300 rounded" id="mdp" name="mdp" required>
			</div>
			<div class="mb-4">
				<p class="mb-2">Vous êtes :</p>
				<div class="flex items-center mb-2">
					<input type="radio" id="etudiant" name="role" value="etudiant" required class="mr-2">
					<label for="etudiant">Etudiant</label>
				</div>
				<div class="flex items-center">
					<input type="radio" id="professeur" name="role" value="professeur" required class="mr-2">
					<label for="professeur">Professeur</label>
				</div>
			</div>
			<div class="text-center">
				<input type="submit" value="Connexion" class="bg-blue-600 text-white py-2 px-4 rounded hover:bg-blue-700">
			</div>
		</form>
	</div>
{% endblock %}
