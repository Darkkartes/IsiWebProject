{% extends "base.twig" %}
{% block stagiaire_active %}actif
{% endblock %}
{% block cacher %}display: none;
{% endblock %}
{% block content %}
	<article>
		<h1>Stagiaire</h1>

		<table class="list">
			<thead>
				<th colspan="6">Informations sur le stagiaire
					{{ stagiaire.num_etudiant }}</th>
			</thead>
			<tbody>
				<tr>
					<td>Nom</td>
					<td>{{ stagiaire.nom_etudiant }}</td>
				</tr>
				<tr>
					<td>Prénom</td>
					<td>{{ stagiaire.prenom_etudiant }}</td>
				</tr>
				<tr>
					<td>Nom d'utilisateur (8 caractères)</td>
					<td>{{ stagiaire.login }}</td>
				</tr>
				<tr>
					<td>Mot de passe (entre 8 et 30 caractères)</td>
					<td>{{ stagiaire.mdp }}</td>
				</tr>
				<tr>
					<td>Date d'obtention du diplôme</td>
					<td>{{ stagiaire.annee_obtention }}</td>
				</tr>
				<tr>
					<td>Classe</td>
					<td>{{ stagiaire.num_classe }}</td>
				</tr>
			</tbody>
		</table>
	</article>
{% endblock %}
