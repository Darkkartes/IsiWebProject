{% extends "base.twig" %}
{% block stagiaire_active %}bg-blue-600
{% endblock %}
{% block content %}
	<article>
		<h1 class="text-2xl font-bold mb-4">Modifier un stagiaire</h1>

		<form method="post" class="space-y-4">
			<table class="min-w-full bg-white border border-gray-300">
				<thead>
					<tr>
						<th colspan="2" class="bg-blue-600 text-white px-4 py-2">Informations sur le stagiaire
							{{ etudiant.num_etudiant }}</th>
					</tr>
				</thead>
				<tbody>
					<tr class="bg-gray-100 border-b border-gray-300">
						<td class="px-4 py-2 border border-gray-500">Nom<span class="text-red-500">*</span>
						</td>
						<td class="px-4 py-2 border border-gray-500">
							<textarea name="nom" id="nom" required class="w-full p-2 border border-gray-300 rounded">{{ etudiant.nom_etudiant }}</textarea>
						</td>
					</tr>
					<tr class="bg-gray-100 border-b border-gray-300">
						<td class="px-4 py-2 border border-gray-500">Prénom<span class="text-red-500">*</span>
						</td>
						<td class="px-4 py-2 border border-gray-500">
							<textarea name="prenom" id="prenom" required class="w-full p-2 border border-gray-300 rounded">{{ etudiant.prenom_etudiant }}</textarea>
						</td>
					</tr>
					<tr class="bg-gray-100 border-b border-gray-300">
						<td class="px-4 py-2 border border-gray-500">Nom d'utilisateur (8 caractères)<span class="text-red-500">*</span>
						</td>
						<td class="px-4 py-2 border border-gray-500">
							<textarea name="utilisateur" id="utilisateur" required class="w-full p-2 border border-gray-300 rounded">{{ etudiant.login }}</textarea>
						</td>
					</tr>
					<tr class="bg-gray-100 border-b border-gray-300">
						<td class="px-4 py-2 border border-gray-500">Mot de passe (entre 8 et 30 caractères)<span class="text-red-500">*</span>
						</td>
						<td class="px-4 py-2 border border-gray-500">
							<textarea name="mdp" id="mdp" required class="w-full p-2 border border-gray-300 rounded">{{ etudiant.mdp }}</textarea>
						</td>
					</tr>
					<tr class="bg-gray-100 border-b border-gray-300">
						<td class="px-4 py-2 border border-gray-500">Date d'obtention du diplôme</td>
						<td class="px-4 py-2 border border-gray-500">
							<textarea name="date" id="date" class="w-full p-2 border border-gray-300 rounded">{{ etudiant.annee_obtention }}</textarea>
						</td>
					</tr>
					<tr class="bg-gray-100 border-b border-gray-300">
						<td class="px-4 py-2 border border-gray-500">Classe</td>
						<td class="px-4 py-2 border border-gray-500">
							<textarea name="classe" id="classe" class="w-full p-2 border border-gray-300 rounded">{{ etudiant.num_classe }}</textarea>
						</td>
					</tr>
				</tbody>
			</table>
			<div class="text-center">
				<input type="submit" value="Modifier" class="bg-blue-600 text-white py-2 px-4 rounded hover:bg-blue-700">
			</div>
		</form>
	</article>
{% endblock %}
